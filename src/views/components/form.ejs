<div class="form-container">
    <form action="/users/add-new-user" method="post" id="userForm">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="Pavel" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="exapmle@gmail.com" required>

        <label for="phone">Phone:</label>
